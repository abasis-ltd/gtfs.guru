# ============================================================================
# GTFS Validator - Environment Configuration
# Copy this to .env and modify for your deployment
# ============================================================================

# Your public domain (REQUIRED - change this!)
GTFS_VALIDATOR_WEB_PUBLIC_BASE_URL=https://gtfs.yourdomain.com

# Directory for storing validation jobs
GTFS_VALIDATOR_WEB_BASE_DIR=/data/jobs

# Job time-to-live in seconds (default: 24 hours = 86400)
GTFS_VALIDATOR_WEB_JOB_TTL_SECONDS=86400

# Logging level: error, warn, info, debug, trace
RUST_LOG=info
